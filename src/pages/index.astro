---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { highlights } from '../data/highlights';

const allPosts = await getCollection('blog');

// Get highlighted posts in the order specified in highlights.ts
const highlightedPosts = highlights
  .map(slug => allPosts.find(post => post.slug === slug))
  .filter(post => post !== undefined);
---

<BaseLayout
  title="Aaron Roy"
  description="Writing on building products, bikes, and random projects."
>
  <div class="max-w-3xl mx-auto px-6 py-16">
    <!-- Intro Section -->
    <section class="mb-20">
      <h1 class="text-5xl md:text-6xl font-bold tracking-tight mb-6">
        Hi there, I'm Aaron Roy ðŸ‘‹
      </h1>
    </section>

    <!-- Highlights Section -->
    <section>
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-semibold">Highlights</h2>
        <a href="/writing" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
          View all â†’
        </a>
      </div>

      <div class="space-y-10">
        {highlightedPosts.map((post) => (
          <article class="group">
            <a href={`/${post.slug}`} class="block">
              <h3 class="text-xl font-semibold mb-2 group-hover:text-blue-600 transition-colors">
                {post.data.title}
              </h3>
              <div class="flex items-center gap-3 text-sm text-gray-600 mb-3">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-us', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
                {post.data.categories && post.data.categories.length > 0 && (
                  <>
                    <span>â€¢</span>
                    <span>{post.data.categories[0]}</span>
                  </>
                )}
              </div>
              <p class="text-gray-600 leading-relaxed">
                {post.data.description}
              </p>
            </a>
          </article>
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
