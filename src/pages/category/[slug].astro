---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getPublishedPosts, slugify } from '../../utils/posts';

export async function getStaticPaths() {
  const allPosts = await getPublishedPosts();

  // Get all unique categories with their slugs
  const categoryMap = new Map<string, { name: string; posts: typeof allPosts }>();

  allPosts.forEach((post) => {
    if (post.data.categories && post.data.categories.length > 0) {
      post.data.categories.forEach((category) => {
        const slug = slugify(category);
        if (!categoryMap.has(slug)) {
          categoryMap.set(slug, { name: category, posts: [] });
        }
        categoryMap.get(slug)!.posts.push(post);
      });
    }
  });

  // Generate paths for each category
  return Array.from(categoryMap.entries()).map(([slug, data]) => ({
    params: { slug },
    props: {
      categoryName: data.name,
      posts: data.posts.sort(
        (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
      )
    },
  }));
}

const { categoryName, posts } = Astro.props;
---

<BaseLayout
  title={`${categoryName} Articles`}
  description={`Articles about ${categoryName.toLowerCase()}`}
>
  <div class="max-w-3xl mx-auto px-6 py-12">
    <header class="mb-16">
      <nav class="mb-4">
        <a href="/categories" class="text-blue-600 hover:underline">
          ‚Üê All Categories
        </a>
      </nav>
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">{categoryName}</h1>
      <p class="text-lg text-gray-600">
        {posts.length} {posts.length === 1 ? 'article' : 'articles'}
      </p>
    </header>

    <div class="space-y-8">
      {posts.map((post) => (
        <article class="group">
          <a href={`/${post.slug}`} class="block">
            <h2 class="text-xl font-semibold mb-2 group-hover:text-blue-600 transition-colors">
              {post.data.title}
            </h2>
            <div class="flex items-center gap-3 text-sm text-gray-600 mb-3">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-us', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
            </div>
            <p class="text-gray-600 leading-relaxed">
              {post.data.description}
            </p>
          </a>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>
